<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:text="여기어때"
                    android:textColor="#FFFF0000"
                    android:textSize="24sp" />

                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:columnCount="4"
                    android:padding="16dp"
                    android:rowCount="6">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_01" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_02" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_03" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_04" />

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="프리미엄블랙" />

                    <TextView
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="모텔" />

                    <TextView
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="호텔*리조트" />

                    <TextView
                        android:layout_row="1"
                        android:layout_column="3"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="펜션*풀빌라" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_05" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_06" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_07" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_08" />

                    <TextView
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="홈&amp;빌라" />

                    <TextView
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="캠핑*글램핑" />

                    <TextView
                        android:layout_row="3"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="게하*한옥" />

                    <TextView
                        android:layout_row="3"
                        android:layout_column="3"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="공간대여" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_09" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_10" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="4"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_11" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="4"
                        android:layout_column="3"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_12" />

                    <TextView
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="국내 항공" />

                    <TextView
                        android:layout_row="5"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="렌터카" />

                    <TextView
                        android:layout_row="5"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="레저*티켓" />

                    <TextView
                        android:layout_row="5"
                        android:layout_column="3"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="맛집" />


                </GridLayout>

                <TextView
                    android:id="@+id/tv_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gridLayout"
                    android:layout_marginLeft="16dp"
                    android:text="해외여행 갈 때"
                    android:textColor="#FF0000FF" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/gridLayout"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_toEndOf="@id/tv_trip"
                    android:background="#838383" />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_trip"
                    android:columnCount="4"
                    android:padding="16dp"
                    android:rowCount="2">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_13" />

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="해외 항공" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_14" />

                    <TextView
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="해외 숙소" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:src="@drawable/icons_15" />

                    <TextView
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"
                        android:text="해외 특가" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:layout_columnSpan="1"
                        android:layout_columnWeight="1" />


                </GridLayout>


            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/purple_700" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>